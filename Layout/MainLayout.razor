@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

<div class="df-app">
    <!-- CABECERA GLOBAL -->
    <header class="df-header">
        <div class="df-header__inner">
            <a href="/" class="df-brand">
                <img src="Images/momentum-logo.png"
                     alt="Momentum Real Estate"
                     class="df-logo" />
                <span>Momentum Real Estate S.L.</span>
            </a>

            <nav class="df-nav">
                <NavLink href="/"
                         Match="NavLinkMatch.All"
                         class="df-nav__link"
                         activeClass="active">
                    Inicio
                </NavLink>

                <NavLink href="/upload-excel"
                         class="df-nav__link"
                         activeClass="active">
                    Contraste Prinex
                </NavLink>

                <NavLink href="/bankflowpro"
                         class="df-nav__link"
                         activeClass="active">
                    BankFlow Pro
                </NavLink>

                <NavLink href="/procesar-pdfs"
                         class="df-nav__link"
                         activeClass="active">
                    PDFlow
                </NavLink>
            </nav>
        </div>
    </header>

    <!-- CONTENIDO DE CADA PÁGINA -->
    <main class="df-main df-bg">
        <div class="df-container">
            @ChildContent
        </div>
    </main>

    <!-- FOOTER GLOBAL -->
    <footer class="df-footer">
        © 2025 Departamento Financiero — Sistema interno de automatización
    </footer>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
