@inherits LayoutComponentBase

<PageTitle>Departamento Financiero</PageTitle>

<div class="df-shell">
    <header class="df-topbar">
        <div class="df-topbar-left">
            <img src="/Images/momentum-logo.png" alt="Momentum" class="df-logo" />
            <span class="df-company">Momentum Real Estate S.L.</span>
        </div>

        <nav class="df-nav">
            <NavLink href="/" Match="NavLinkMatch.All" class="df-nav-link">
                Inicio
            </NavLink>

            <NavLink href="/upload-excel" class="df-nav-link">
                Contraste Prinex
            </NavLink>

            <NavLink href="/bankflowpro" class="df-nav-link">
                BankFlow Pro
            </NavLink>

            <NavLink href="/procesar-pdfs" class="df-nav-link">
                PDFlow
            </NavLink>
        </nav>
    </header>

    <main>
        @if (Body is not null)
        {
            @Body
        }
        else if (ChildContent is not null)
        {
            @ChildContent
        }
    </main>


    <footer class="df-footer">
        © 2025 Departamento Financiero — Sistema interno de automatización
    </footer>
</div>
@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}

