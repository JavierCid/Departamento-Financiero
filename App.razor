@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(App).Assembly" PreferExactMatches="true">
    <Found Context="routeData">
        <RouteView RouteData="@routeData"
                   DefaultLayout="@typeof(Departamento_Financiero.Layout.MainLayout)" />
    </Found>

    <NotFound>
        <LayoutView Layout="@typeof(Departamento_Financiero.Layout.MainLayout)">

            <p>No hay nada en esta dirección.</p>
        </LayoutView>
    </NotFound>
</Router>
