@page "/"

<div class="df-container">
    <section class="df-hero">
        <div class="df-hero__content">
            <h1>Departamento Financiero</h1>
            <p>
                Síntesis flujos bancarios, desglose de facturas y cruce contable con inteligencia artificial

            </p>

            <div class="df-hero__cta">
                <a href="/upload-excel" class="btn-card">Contraste Prinex</a>
                <a href="/bankflowpro" class="btn-card">BankFlow Pro</a>
                <a class="btn-card" href="/procesar-pdfs">PDFlow</a>
                
            </div>

        </div>
        <div class="df-hero__mark" aria-hidden="true"></div>
    </section>

    <section class="df-values">
        <!-- 1. Procesamiento inteligente -->
        <div class="df-value">
            <div class="df-value-icon">
                <svg class="df-value-svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                    <!-- Marco principal del “módulo” -->
                    <rect x="16" y="16" width="32" height="32" rx="8" />

                    <!-- Cuadrado central (núcleo de proceso) -->
                    <rect x="25" y="25" width="14" height="14" rx="3" />

                    <!-- Conexiones hacia fuera (nodos IA / automatización) -->
                    <line x1="32" y1="16" x2="32" y2="10" />
                    <circle cx="32" cy="8" r="2.5" />

                    <line x1="48" y1="32" x2="54" y2="32" />
                    <circle cx="56" cy="32" r="2.5" />

                    <line x1="32" y1="48" x2="32" y2="54" />
                    <circle cx="32" cy="56" r="2.5" />

                    <line x1="16" y1="32" x2="10" y2="32" />
                    <circle cx="8" cy="32" r="2.5" />
                </svg>
            </div>
            <h3>Procesamiento inteligente</h3>
            <p>
                Síntesis y desglose automático de facturas y extractos bancarios.
            </p>
        </div>


        <!-- 2. Vista previa unificada -->
        <div class="df-value">
            <div class="df-value-icon df-value-icon--middle">

                <svg class="df-value-svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                    <!-- Marco general del dashboard -->
                    <rect x="12" y="16" width="40" height="28" rx="6" />

                    <!-- Tarjeta grande izquierda -->
                    <rect x="16" y="20" width="18" height="20" rx="4" />

                    <!-- Tarjeta derecha arriba -->
                    <rect x="36" y="20" width="12" height="9" rx="3" />

                    <!-- Tarjeta derecha abajo -->
                    <rect x="36" y="31" width="12" height="9" rx="3" />

                    <!-- Tres “pestañas” superiores (multiples vistas) -->
                    <line x1="18" y1="14" x2="24" y2="14" />
                    <line x1="26" y1="14" x2="32" y2="14" />
                    <line x1="34" y1="14" x2="40" y2="14" />
                </svg>
            </div>
            <h3>Vista previa unificada</h3>
            <p>
                Representación visual de facturación, pagos y remesas antes de exportar.
            </p>
        </div>


        <!-- 3. Generación automática de archivos -->
        <div class="df-value">
            <div class="df-value-icon">
                <svg class="df-value-svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                    <!-- Hoja / documento -->
                    <path d="M22 14h14l10 10v24a4 4 0 0 1-4 4H22a4 4 0 0 1-4-4V18a4 4 0 0 1 4-4z" />
                    <!-- Esquina doblada -->
                    <path d="M36 14v10h10" />

                    <!-- Rayo (automatización) -->
                    <path d="M30 30l-5 10h6l-3 10l10-12h-6l3-8z" />

                    <!-- Línea base opcional (estabilidad) -->
                    <line x1="24" y1="50" x2="40" y2="50" />
                </svg>
            </div>
            <h3>Generación automática de archivos</h3>
            <p>
                Crea informes en formato financiero claro y consolidado listos para contabilidad.
            </p>
        </div>

    </section>




</div>