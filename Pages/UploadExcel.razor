    @page "/upload-excel"
    @page "/uploadexcel"
    @page "/contrasteprinex"

    @inject NavigationManager Nav

    <div class="prinex-head">
        <h3>Contraste Prinex</h3>
        <img class="prinex-logo" src="/Images/prinex_logo.png" alt="Prinex" />
    </div>

    <div class="prinex-desc">
        Elige el tipo de contraste que deseas realizar:
    </div>

    <div class="df-selector">
        <button class="df-bigbtn df-btn-conta" @onclick='() => Nav.NavigateTo("/uploadexcel-contabilidad")'>
            <img src="/Images/icon-contabilidad.png" class="df-icon" alt="Contabilidad" />
            <span>Contraste contabilidad ↔ Prinex</span>
        </button>

        <button class="df-bigbtn df-btn-factu" @onclick='() => Nav.NavigateTo("/cuadrepdfprinex")'>
            <img src="/Images/icon-facturacion.png" class="df-icon" alt="Facturación" />
            <span>Contraste facturación ↔ Prinex</span>
        </button>
    </div>




    <style>
        .df-selector {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1.8rem;
            margin-top: 3rem;
        }

    .df-bigbtn {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 1rem;
        font-size: 1.15rem;
        padding: 1rem 1.8rem;
        width: 420px;
        border-radius: 1rem; /* 🔹 Más suaves */
        color: #ffffff;
        font-weight: 600;
        background: linear-gradient(135deg, #3b5fa8, #4a73c2); /* 🔹 Azul Prinex atenuado */
        border: 1px solid #5a7ed0;
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.25);
        transition: all 0.25s ease;
        white-space: nowrap;
    }

        
    /* 🔹 Ambos iguales */
    .df-btn-conta,
    .df-btn-factu {
        background: linear-gradient(135deg, #4a5f88, #566f99); /* 🔹 Azul grisáceo suave */
        border: 1px solid #6a80a8;
    }

    .df-icon {
        width: 48px;
        height: 48px;
        margin-left: -0.2rem;
        object-fit: contain;
        filter: brightness(12) saturate(0) opacity(0.9); /* 🔹 Blanco suave, no chillón */
        transition: filter 0.3s ease, opacity 0.3s ease;
    }

    .df-bigbtn:hover .df-icon {
        filter: brightness(15) saturate(0) opacity(1); /* 🔹 Un poco más brillante al pasar el ratón */
    }



    /* 🔹 Texto mejor alineado */
    .df-bigbtn span {
        flex-grow: 1;
        text-align: left;
    }

    .df-bigbtn:hover {
        background: linear-gradient(135deg, #4a73c2, #5e8ae0);
        box-shadow: 0 0 18px rgba(80, 140, 255, 0.4);
        transform: translateY(-2px);
    }

    </style>