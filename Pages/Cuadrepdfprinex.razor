            <div class="df-files text-muted">
                @if (_pdfs.Count > 0)
                {
                    <div><strong>PDFs cargados:</strong> @_pdfs.Count archivo(s)</div>
                }
                @if (_excel is not null)
                {
                    <div><strong>Excel Prinex:</strong> @_excel.Name</div>
                }
            </div>

            @if (!string.IsNullOrWhiteSpace(_err))
            {
                <div class="alert alert-danger py-2 mt-3 mb-0">@_err</div>
            }
            @if (!string.IsNullOrWhiteSpace(_ok))
            {
                <div class="alert alert-success py-2 mt-3 mb-0">@_ok</div>
            }
        </div>
    }

    @if (_preview is not null)
    {
        <div class="df-preview card df-card p-3 mt-3">
            <h5 class="mb-2">Vista previa del cruce</h5>



            @if (_preview.Coincidencias?.Count > 0)
            {
                <h6>✅ Coincidencias (@_preview.Coincidencias.Count)</h6>
                <p class="df-section-subtitle">
                    Facturas que tienen PDF y factura pendiente asociada en Prinex.
                </p>
                <table class="table table-sm table-striped table-hover df-table-coinc">


                    <thead class="table-primary">
                        <tr>
                            <th>Documento</th>
                            <th>Coincidencias detectadas en Prinex</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in _preview.Coincidencias)
                        {
                            <tr>
                                <td title="@c.Documento">@ShortDoc(c.Documento)</td>
                                <td>@FormatCoincidencia(c.CoincidenciaDetectada)</td>

                            </tr>
                        }

                    </tbody>

                </table>

            }


            @if (_preview.Faltantes?.Count > 0)
            {
                <h6 class="mt-3 text-warning">⚠️ En PDF pero NO en Prinex (@_preview.Faltantes.Count)</h6>
                <p class="df-section-subtitle">
                    Facturas que sí tienen PDF cargado pero no aparecen como pendientes en Prinex.
                </p>
                <table class="table table-sm table-striped table-hover df-table-coinc">

                    <thead class="table-warning">
                        <tr>
                            <th>Documento</th>
                            <th>
                                Coincidencias insuficientes
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var raw in _preview.Faltantes)
                        {
                            var f = ParseFaltante(raw);
                            <tr>
                                <td title="@f.Documento">@ShortDoc(f.Documento)</td>
                                <td>@FormatFaltante(f.Motivo)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }



            @if (_preview.Descuadres?.Count > 0)
            {
                <details class="df-toggle mt-3">
                    <summary>
                        <div class="df-toggle-header">
                            <span class="df-toggle-title">
                                ❌ En Prinex pero sin PDF (@_preview.Descuadres.Count)
                            </span>
                            <span class="df-toggle-arrow"></span>
                        </div>
                        <div class="df-section-subtitle">
                            Facturas que figuran en Prinex como pendientes pero no tienen PDF cargado.
                        </div>
                    </summary>

                    <table class="table table-sm table-striped table-hover mt-2">
                        <thead class="table-danger">
                            <tr>
                                <th>Nº factura en Prinex</th>
                                <th>Importe Prinex</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var f in _preview.Descuadres)
                            {
                                var parsed = ParsePrinexMissing(f);
                                <tr>
                                    <td>@parsed.Numero</td>
                                    <td>@parsed.Importe</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </details>
            }

        </div>

    }
</div>

@code {
    private static MarkupString FormatCoincidencia(string? txt)
    {
        if (string.IsNullOrWhiteSpace(txt))
            return default;

        // El texto ya viene con <em>…</em> y (<strong>tipo</strong>) desde la Function
        return (MarkupString)txt;



    }

    private static MarkupString FormatFaltante(string? txt)
    {
        if (string.IsNullOrWhiteSpace(txt))
            return default;

        // Igual que en coincidencias: respetamos el HTML que ya viene de la Function
        return (MarkupString)txt;
    }



    private static string ShortDoc(string? name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return string.Empty;

        const int max = 60; // mismo límite para Coincidencias y Faltantes
        return name.Length <= max ? name : name.Substring(0, max) + "…";
    }

    private static (string Documento, string Motivo) ParseFaltante(string? raw)
    {
        if (string.IsNullOrWhiteSpace(raw))
            return (string.Empty, string.Empty);

        var txt = raw.Trim();
        var idx = txt.IndexOf('→');
        if (idx < 0)
            return (txt, string.Empty);

        var doc = txt.Substring(0, idx).Trim();
        var motivo = txt.Substring(idx + 1).Trim();
        return (doc, motivo);
    }

    const string EndpointCuadre = "http://localhost:7071/api/contraste-facturas";


    // Payload que mandamos a la Azure Function (PDFs + Excel en base64)
    private class UploadDto
    {
        public List<FileDto> Pdfs { get; set; } = new();
        public FileDto? Excel { get; set; }
        public string SociedadFiltro { get; set; } = string.Empty;
        public string PeriodoFiltro { get; set; } = string.Empty; // ej: 11/2025

        public class FileDto
        {
            public string Name { get; set; } = string.Empty;
            public string Base64 { get; set; } = string.Empty;
        }
    }







    List<IBrowserFile> _pdfs = new();
    IBrowserFile? _excel;
    bool _busy;
    string? _ok, _err;
    PreviewDto? _preview;
    string _sociedadFiltro = string.Empty;
    string _periodoFiltro = string.Empty; // MM/AAAA, opcional

    // Estado visual de la dropzone de PDFs
    bool _drag;

    bool _canSend => _pdfs.Count > 0 && _excel is not null;

    void SetDrag(bool value) => _drag = value;



    void OnPdfsSelected(InputFileChangeEventArgs e)
    {
        const int MaxPdfs = 50;                 // límite de número de PDFs
        const long MaxTotalBytes = 30L * 1024 * 1024; // 30 MB en total

        var files = e.GetMultipleFiles(MaxPdfs);
        long totalBytes = files.Sum(f => (long)f.Size);

        // Mensajes de validación
        if (e.FileCount > MaxPdfs)
        {
            _err = $"Has seleccionado {e.FileCount} PDFs. El límite actual son {MaxPdfs}. " +
                   $"Solo se usarán los {MaxPdfs} primeros.";
        }
        else if (totalBytes > MaxTotalBytes)
        {
            double mb = totalBytes / 1024d / 1024d;
            double maxMb = MaxTotalBytes / 1024d / 1024d;
            _err = $"El tamaño total de los PDFs seleccionados ({mb:F1} MB) supera el límite de {maxMb:F0} MB.";
        }
        else
        {
            _err = null;
        }

        _pdfs = files.ToList();
        _ok = null;
        _preview = null;
    }


    void OnExcelSelected(InputFileChangeEventArgs e)
    {
        _excel = e.File;
        _ok = _err = null;
        _preview = null;
    }

    async Task Enviar()
    {
        if (!_canSend) return;
        _busy = true; _ok = _err = null; _preview = null;

        try
        {
            var dto = new UploadDto
            {
                SociedadFiltro = _sociedadFiltro?.Trim() ?? string.Empty,
                PeriodoFiltro = string.Empty
            };



            // PDFs
            foreach (var pdf in _pdfs)
            {
                using var ms = new MemoryStream();
                await pdf.OpenReadStream(long.MaxValue).CopyToAsync(ms);

                dto.Pdfs.Add(new UploadDto.FileDto
                {
                    Name = pdf.Name,
                    Base64 = Convert.ToBase64String(ms.ToArray())
                });
            }

            // Excel
            if (_excel is not null)
            {
                using var ms = new MemoryStream();
                await _excel.OpenReadStream(long.MaxValue).CopyToAsync(ms);

                dto.Excel = new UploadDto.FileDto
                {
                    Name = _excel.Name,
                    Base64 = Convert.ToBase64String(ms.ToArray())
                };
            }

            dto.SociedadFiltro = string.IsNullOrWhiteSpace(_sociedadFiltro)
    ? string.Empty
    : _sociedadFiltro;


            var jsonBody = System.Text.Json.JsonSerializer.Serialize(dto);

            using var content = new StringContent(jsonBody, Encoding.UTF8, "application/json");

            var resp = await Http.PostAsync(EndpointCuadre, content);
            if (!resp.IsSuccessStatusCode)
            {
                _err = $"Error {(int)resp.StatusCode}: " + await resp.Content.ReadAsStringAsync();
                return;
            }

            if (resp.Headers.TryGetValues("X-Preview", out var vals))
            {
                var json = vals.FirstOrDefault();
                if (!string.IsNullOrWhiteSpace(json))
                {
                    _preview = System.Text.Json.JsonSerializer.Deserialize<PreviewDto>(
                        json,
                        new System.Text.Json.JsonSerializerOptions
                        {
                            PropertyNameCaseInsensitive = true
                        });
                }
            }

            _ok = "Cruce completado correctamente";
        }
        catch (Exception ex)
        {
            _err = ex.Message;
        }
        finally
        {
            _busy = false;
        }
    }

    // === DTO ===
    public class PreviewDto
    {
        public List<Coincidencia> Coincidencias { get; set; } = new();
        public List<string> Faltantes { get; set; } = new();
        public List<string> Descuadres { get; set; } = new();

        public class Coincidencia
        {
            public string? Documento { get; set; }
            public string? CoincidenciaDetectada { get; set; }
        }
    }

    private (string Numero, string Importe) ParsePrinexMissing(string raw)
    {
        if (string.IsNullOrWhiteSpace(raw))
            return (string.Empty, string.Empty);

        var label = "En Prinex pero sin PDF:";
        var s = raw;

        // Quitar el prefijo "En Prinex pero sin PDF:" si viene en el texto
        var idxLabel = s.IndexOf(label, StringComparison.OrdinalIgnoreCase);
        if (idxLabel >= 0)
            s = s.Substring(idxLabel + label.Length).Trim();

        // Intentar separar "número (importe)"
        var idxParen = s.LastIndexOf('(');
        if (idxParen > 0 && s.EndsWith(")"))
        {
            var numero = s.Substring(0, idxParen).Trim().TrimEnd(',', ';');
            var importe = s.Substring(idxParen + 1, s.Length - idxParen - 2).Trim(); // sin paréntesis
            return (numero, importe);
        }

        // Si no encaja el patrón, devolvemos todo como número y sin importe
        return (s, string.Empty);
    }

}

